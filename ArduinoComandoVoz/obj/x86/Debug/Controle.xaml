        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,10,-1,0" TextWrapping="Wrap" Text="Controles" VerticalAlignment="Top" RenderTransformOrigin="-0.134,0.367" FontSize="24" FontWeight="Bold" Foreground="White"/>
