            <Button x:ConnectionId='11' x:Name="btn2On" Content="Liga" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,-232,-90.667" Foreground="White" FontSize="20" FontWeight="Bold" FontStyle="Italic" Width="92"               />
        </RelativePanel>
        <RelativePanel Height="138" Margin="0,350,0,0" VerticalAlignment="Top" Width="340">
            <Slider x:ConnectionId='4' x:Name="sldLed3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="340" LargeChange="1" Margin="0,46,0,-46" Value="0" IntermediateValue="1"                            Maximum="255" BorderThickness="0">
                <Slider.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Red" Offset="0"/>
                        <GradientStop Color="Green" Offset="1"/>
                    </LinearGradientBrush>
                </Slider.Foreground>
            </Slider>
            <TextBlock x:ConnectionId='5' x:Name="textBlock3" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Led 3" VerticalAlignment="Top" Foreground="White" FontSize="20" FontWeight="Bold" FontStyle="Italic" Margin="0,0,-329,-0.667" RenderTransformOrigin="0.019,-1.062"/>
