            <Button x:ConnectionId='7' x:Name="btn3On" Content="Liga" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,-232,-90.667" Foreground="White" FontSize="20" FontWeight="Bold" FontStyle="Italic" Width="92"               />
        </RelativePanel>
        <Button x:ConnectionId='2' x:Name="btnVoltar" Content="Voltar" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Height="49" Width="340" Background="#33FFFFFF"                      FontWeight="Bold" FontSize="20"/>
